{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node", //모듈 해석 방법 설정: 'node' (Node.js)
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // 절대 경로설정
    "baseUrl": "./src",
    "paths": {
      "@controllers": ["./controllers"],
      "@loaders": ["./loaders"],
      "@middlewares": ["./middlewares"],
      "@models": ["./models"],
      "@routes": ["./routes"],
      "@services": ["./services"],
      "@utils": ["./utils"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"]
}
